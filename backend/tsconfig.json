{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "isolatedModules": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "forceConsistentCasingInFileNames": true
  }
}
